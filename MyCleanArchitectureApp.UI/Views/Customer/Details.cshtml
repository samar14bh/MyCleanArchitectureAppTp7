@model MyCleanArchitectureApp.Web.Models.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="customer-details container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="customer-info">
                <h3 class="mb-4">Customer: @Model.Customer.Name</h3>

                <div class="favorite-movies">
                    <h4 class="mb-3">Favorite Movies</h4>
                    @if (Model.FavoriteMovies != null && Model.FavoriteMovies.Any())
                    {
                        <ul class="list-group">
                            @foreach (var movie in Model.FavoriteMovies)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>@movie.Name</strong>
                                    <span class="badge bg-primary">@movie.AverageRating</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No favorite movies found for this customer.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
